@page
@model AAS.Pages.Logs.ListModel

@{
    ViewData["Title"] = "List";
}

<h1>Logs</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Log[0].LogDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Log[0].Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Log[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Log[0].Notes)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Log) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LogDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FullName)
            </td>
            <td>
                    @{
                        string notes = item.Notes;
                        notes.ReplaceLineEndings();
                    }
                    @notes
            </td>
        </tr>
}
    </tbody>
</table>
