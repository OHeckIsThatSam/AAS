@page
@model AAS.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if(Html.ValidationMessage("LoginError") != null) 
                {
                    <div class="text-danger">@Html.ValidationMessage("LoginError")</div>
                }
            }
            <div class="form-group">
                <input asp-for="LoginType" type="hidden" id="LoginType" value="default" />
                <label asp-for="Employee.Username" class="control-label"></label>
                <input asp-for="Employee.Username" class="form-control" />
                <span asp-validation-for="Employee.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Password" class="control-label"></label>
                <input asp-for="Employee.Password" class="form-control" type="password" />
                <span asp-validation-for="Employee.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
                <input type="submit" value="Branch Login" class="btn btn-primary" onclick="setLoginType('branch')" />
                <input type="submit" value="VPN Login" class="btn btn-primary" onclick="setLoginType('vpn')" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
