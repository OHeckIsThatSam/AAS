@page
@model AAS.Pages.Cards.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Card.CardId" />
            <div class="form-group">
                <label asp-for="Card.Number" class="control-label"></label>
                <input asp-for="Card.Number" class="form-control" />
                <span asp-validation-for="Card.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.SecurityCode" class="control-label"></label>
                <input asp-for="Card.SecurityCode" class="form-control" />
                <span asp-validation-for="Card.SecurityCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.ExpiryDate" class="control-label"></label>
                <input asp-for="Card.ExpiryDate" class="form-control" />
                <span asp-validation-for="Card.ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Card.PIN" class="control-label"></label>
                <input asp-for="Card.PIN" class="form-control" />
                <span asp-validation-for="Card.PIN" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Card.IsActive" /> @Html.DisplayNameFor(model => model.Card.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Card.CustomerId" class="control-label"></label>
                <select asp-for="Card.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Card.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
